 arch/arm64/boot/dts/compulab/panel-chimei.dtsi     | 44 ++++++++++++++++++++++
 .../dts/compulab/sbc-imx8-lvds-chimei-dcss.dts     | 19 ++++++++++
 .../dts/compulab/sbc-imx8-lvds-chimei-lcdif.dts    | 36 ++++++++++++++++++
 4 files changed, 101 insertions(+)
 create mode 100644 arch/arm64/boot/dts/compulab/panel-chimei.dtsi
 create mode 100644 arch/arm64/boot/dts/compulab/sbc-imx8-lvds-chimei-dcss.dts
 create mode 100644 arch/arm64/boot/dts/compulab/sbc-imx8-lvds-chimei-lcdif.dts

diff --git a/arch/arm64/boot/dts/compulab/Makefile b/arch/arm64/boot/dts/compulab/Makefile
index c736532..e7e4166 100644
--- a/arch/arm64/boot/dts/compulab/Makefile
+++ b/arch/arm64/boot/dts/compulab/Makefile
@@ -7,6 +7,8 @@ dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += sbc-imx8-lvds-lcdif.dtb
 dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += sbc-imx8-dual.dtb
 dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += sbc-imx8-no-edid.dtb
 dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += sbc-imx8-m4.dtb
+dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += sbc-imx8-lvds-chimei-dcss.dtb
+dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += sbc-imx8-lvds-chimei-lcdif.dtb
 
 always		:= $(dtb-y)
 subdir-y	:= $(dts-dirs)
diff --git a/arch/arm64/boot/dts/compulab/panel-chimei.dtsi b/arch/arm64/boot/dts/compulab/panel-chimei.dtsi
new file mode 100644
index 00000000..5ecbdf9
--- /dev/null
+++ b/arch/arm64/boot/dts/compulab/panel-chimei.dtsi
@@ -0,0 +1,44 @@
+&iomuxc {
+    compulab-imx8mq-lvds {
+        pinctrl_dsi_lvds: dsilvds_group {
+            fsl,pins = <
+                MX8MQ_IOMUXC_GPIO1_IO06_GPIO1_IO6 0x16
+                MX8MQ_IOMUXC_NAND_CE3_B_GPIO3_IO4 0x19
+            >;
+        };
+    };
+};
+
+&ti_bridge {
+        ti,dsi-lanes = <4>;
+        ti,lvds-format = <1>;
+        ti,lvds-bpp = <24>;
+        ti,width-mm = <255>;
+        ti,height-mm = <145>;
+        enable-panel-gpios = <&gpio3 4 GPIO_ACTIVE_HIGH>;
+
+        display-timings {
+            lvds {
+                clock-frequency = <60000000>;
+                hactive = <1366>;
+                vactive = <768>;
+
+		/* Horizontal Active Blanking Period = 194 */
+                hsync-len    = <65>;
+                hback-porch  = <98>;
+                hfront-porch = <31>;
+
+		/* Vertical Active Blanking Period = 38 */
+                vsync-len    = <12>;
+                vback-porch  = <22>;
+                vfront-porch = <4>;
+
+                hsync-active = <0>;
+                vsync-active = <0>;
+
+                de-active = <1>;
+                pixelclk-active = <1>;
+            };
+        };
+};
+
