@@ -682,7 +682,7 @@
     linux,cma {
         compatible = "shared-dma-pool";
         reusable;
-        size = <0 0x2c000000>;
+        size = <0 0x18000000>;
         alloc-ranges = <0 0x40000000 0 0x40000000>;
         linux,cma-default;
     };
