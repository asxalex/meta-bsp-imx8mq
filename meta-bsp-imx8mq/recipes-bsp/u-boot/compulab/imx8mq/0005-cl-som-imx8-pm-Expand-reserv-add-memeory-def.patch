From: Valentin Raevsky <valentin@compulab.co.il>
Date: Sun, 14 Apr 2019 14:18:55 +0300
Subject: [PATCH 5/5] cl-som-imx8: pm: Expand reserv & add memeory def

Signed-off-by: Valentin Raevsky <valentin@compulab.co.il>
---
 arch/arm/dts/cl-som-imx8.dts | 7 ++++++-
 1 file changed, 6 insertions(+), 1 deletion(-)

diff --git a/arch/arm/dts/cl-som-imx8.dts b/arch/arm/dts/cl-som-imx8.dts
index b59ad01..8c04d2b 100644
--- a/arch/arm/dts/cl-som-imx8.dts
+++ b/arch/arm/dts/cl-som-imx8.dts
@@ -15,7 +15,7 @@
 /dts-v1/;
 
 /* First 128KB is for PSCI ATF. */
-/memreserve/ 0x40000000 0x00020000;
+/memreserve/ 0x40000000 0x00040000;
 
 #include "fsl-imx8mq.dtsi"
 #include "fsl-imx8mq-u-boot.dtsi"
@@ -24,6 +24,11 @@
 	model = "CompuLab CL-SOM-iMX8";
 	compatible = "compulab,cl-som-imx8", "fsl,imx8mq";
 
+	memory@40000000 {
+		device_type = "memory";
+		reg = <0x00000000 0x40000000 0 0x80000000>;
+	};
+
 	chosen {
 		bootargs = "console=ttymxc2,115200 earlycon=ec_imx6q,0x30880000,115200";
 		stdout-path = &uart3;
